@model IEnumerable<EventEasePOE2._0.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h2>Bookings</h2>

<form method="get" asp-action="Index">
    <div>
        <label>Event Name:</label>
        <input type="text" name="eventName" value="@ViewData["CurrentFilter"]" />
    </div>
    <div>
        <label>Venue:</label>
        <select name="venueId">
            <option value="">-- All Venues --</option>
            @foreach (var venue in ViewBag.Venues)
            {
                <option value="@venue.VenueId">@venue.Name</option>
            }
        </select>
    </div>
    <div>
        <label>Status:</label>
        <select name="status">
            <option value="">-- All Statuses --</option>
            <option value="pending">Pending</option>
            <option value="confirmed">Confirmed</option>
            <option value="cancelled">Cancelled</option>
        </select>
    </div>
    <div>
        <label>Start Date:</label>
        <input type="date" name="startDate" value="@ViewBag.StartDate" />
    </div>
    <div>
        <label>End Date:</label>
        <input type="date" name="endDate" value="@ViewBag.EndDate" />
    </div>
    <button type="submit">Search</button>
</form>

<a asp-action="Create">Create New Booking</a>

<table>
    <thead>
        <tr>
            <th>Event</th>
            <th>Venue</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Event?.Name</td>
                <td>@b.Venue?.Name</td>
                <td>@b.StartDate.ToShortDateString()</td>
                <td>@b.EndDate.ToShortDateString()</td>
                <td>@b.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@b.BookingId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@b.BookingId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@b.BookingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
