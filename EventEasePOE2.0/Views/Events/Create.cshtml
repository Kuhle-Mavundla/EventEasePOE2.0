@model EventEasePOE2._0.Models.Event

@using Microsoft.AspNetCore.Mvc.Rendering

<h2>Create Event</h2>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
    </div>
    <div>
        <label asp-for="EventDate"></label>
        <input asp-for="EventDate" type="date" />
        <span asp-validation-for="EventDate"></span>
    </div>
    <div>
        <label>Venue</label>
        <select asp-for="VenueId" asp-items="ViewBag.Venues">
            <option value="">-- Select Venue --</option>
        </select>
    </div>
    <div>
        <label>Event Type</label>
        <select asp-for="EventTypeId" asp-items="ViewBag.EventTypes">
            <option value="">-- Select Event Type --</option>
        </select>
    </div>
    <div>
        <label asp-for="Status"></label>
        <input asp-for="Status" />
        <span asp-validation-for="Status"></span>
    </div>
    <button type="submit">Create</button>
</form>

