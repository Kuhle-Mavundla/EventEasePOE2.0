@model EventEasePOE2._0.Models.Venue

<h2>Edit Venue</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="VenueId" />
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Location"></label>
        <input asp-for="Location" />
        <span asp-validation-for="Location"></span>
    </div>
    <div>
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" />
        <span asp-validation-for="Capacity"></span>
    </div>
    <div>
        <label>Venue Image</label>
        <input type="file" name="imageFile" />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Current Image" width="100" />
        }
    </div>
    <button type="submit">Save</button>
</form>

<a asp-action="Index">Back to List</a>
