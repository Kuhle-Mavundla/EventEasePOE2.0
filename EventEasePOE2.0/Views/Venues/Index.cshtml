@model IEnumerable<EventEasePOE2._0.Models.Venue>

<h2>Venues</h2>

<a asp-action="Create">Create New Venue</a>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venue in Model)
        {
            <tr>
                <td>@venue.Name</td>
                <td>@venue.Location</td>
                <td>@venue.Capacity</td>
                <td>
                    @if (!string.IsNullOrEmpty(venue.ImageUrl))
                    {
                        <img src="@venue.ImageUrl" alt="Venue Image" width="100" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@venue.VenueId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@venue.VenueId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@venue.VenueId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
