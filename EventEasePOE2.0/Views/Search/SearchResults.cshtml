@model IEnumerable<EventEasePOE2._0.Models.Venue>

@{
    ViewData["Title"] = "Search Results";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning">No venues available matching your criteria.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Venue Name</th>
                <th>Location</th>
                <th>Capacity</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var venue in Model)
            {
                <tr>
                    <td>@venue.Name</td>
                    <td>@venue.Location</td>
                    <td>@venue.Capacity</td>
                    <td>
                        @if (!string.IsNullOrEmpty(venue.ImageUrl))
                        {
                            <img src="@venue.ImageUrl" alt="Image" class="img-thumbnail" width="100" />
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="Search" class="btn btn-secondary mt-3">Back to Search</a>
