@model EventEasePOE2._0.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h2 class="mb-4 text-danger">@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this booking?</strong>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <p><strong>Event:</strong> @Model.Event?.Name</p>
        <p><strong>Venue:</strong> @Model.Venue?.Name</p>
        <p><strong>Start:</strong> @Model.StartDate.ToShortDateString()</p>
        <p><strong>End:</strong> @Model.EndDate.ToShortDateString()</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BookingId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
