@model EventEasePOE2._0.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<h2 class="mb-4 text-danger">@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this event?</strong>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Date:</strong> @Model.EventDate.ToShortDateString()</p>
        <p><strong>Venue:</strong> @Model.Venue?.Name</p>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="EventId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
