@model IEnumerable<EventEasePOE2._0.Models.Booking>

<h2>Bookings</h2>

<a asp-action="Create">Create New Booking</a>

<table>
    <thead>
        <tr>
            <th>Event</th>
            <th>Venue</th>
            <th>Booking Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Event?.Name</td>
                <td>@booking.Venue?.Name</td>
                <td>@booking.StartDate.ToShortDateString()</td>
                <td>@booking.EndDate.ToShortDateString()</td>
                <td>@booking.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@booking.BookingId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@booking.BookingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
