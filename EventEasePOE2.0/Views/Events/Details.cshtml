@model EventEasePOE2._0.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title text-primary">@Model.Name</h4>
        <p class="card-text text-muted">@Model.Description</p>

        <dl class="row">
            <dt class="col-sm-3">Date:</dt>
            <dd class="col-sm-9">@Model.EventDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Type:</dt>
            <dd class="col-sm-9">@Model.EventType?.Name</dd>

            <dt class="col-sm-3">Venue:</dt>
            <dd class="col-sm-9">@Model.Venue?.Name</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.EventId" class="btn btn-outline-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</div>
