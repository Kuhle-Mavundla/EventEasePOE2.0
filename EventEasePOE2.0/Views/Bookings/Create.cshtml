@model EventEasePOE2._0.Models.Booking

<h2>Create Booking</h2>

<form asp-action="Create">
    <div>
        <label asp-for="EventId"></label>
        <select asp-for="EventId" asp-items="ViewBag.Events"></select>
    </div>
    <div>
        <label asp-for="VenueId"></label>
        <select asp-for="VenueId" asp-items="ViewBag.Venues"></select>
    </div>
    <div>
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" />
    </div>
    <div>
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" />
    </div>
    <button type="submit">Create</button>
</form>
