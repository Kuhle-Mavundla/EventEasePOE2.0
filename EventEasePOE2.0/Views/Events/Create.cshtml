@model EventEasePOE2._0.Models.Event

<h2>Create Event</h2>

<form asp-action="Create">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
    </div>
    <div>
        <label asp-for="EventDate"></label>
        <input asp-for="EventDate" type="date" />
    </div>
    <div>
        <label asp-for="EventTypeId"></label>
        <select asp-for="EventTypeId" asp-items="ViewBag.EventTypes"></select>
    </div>
    <div>
        <label asp-for="VenueId"></label>
        <select asp-for="VenueId" asp-items="ViewBag.Venues"></select>
    </div>
    <button type="submit">Create</button>
</form>
