@model EventEasePOE2._0.Models.EventType

@{
    ViewData["Title"] = "Delete Event Type";
}

<h2 class="mb-4 text-danger">@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this event type?</strong>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p class="card-text text-muted">@Model.Description</p>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="EventTypeId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
