@model EventEasePOE2._0.Models.Booking

<h2>Delete Booking</h2>

<p>Are you sure you want to delete this booking?</p>

<p><strong>Event:</strong> @Model.Event?.Name</p>
<p><strong>Venue:</strong> @Model.Venue?.Name</p>
<p><strong>Start:</strong> @Model.StartDate.ToShortDateString()</p>
<p><strong>End:</strong> @Model.EndDate.ToShortDateString()</p>

<form asp-action="Delete">
    <input type="hidden" asp-for="BookingId" />
    <button type="submit">Delete</button>
    <a asp-action="Index">Cancel</a>
</form>