@model EventEasePOE2._0.Models.EventType

@{
    ViewData["Title"] = "Event Type Details";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h4 class="card-title text-primary">Event Type</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
        </dl>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.EventTypeId" class="btn btn-outline-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</div>
