@model EventEasePOE2._0.Models.Event

<h2>Event Details</h2>

<div>
    <h3>@Model.Name</h3>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Date:</strong> @Model.EventDate.ToShortDateString()</p>
    <p><strong>Venue:</strong> @Model.Venue?.Name</p>
    <p><strong>Event Type:</strong> @Model.EventType?.Name</p>
    <p><strong>Status:</strong> @Model.Status</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.EventId">Edit</a> |
<a asp-action="Index">Back to List</a>
