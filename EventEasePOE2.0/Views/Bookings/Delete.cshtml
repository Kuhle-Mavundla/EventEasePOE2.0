@model EventEasePOE2._0.Models.Booking

<h2>Delete Booking</h2>

<p>Are you sure you want to delete this booking?</p>

<div>
    <p><strong>Event:</strong> @Model.Event?.Name</p>
    <p><strong>Venue:</strong> @Model.Venue?.Name</p>
    <p><strong>Booking Date:</strong> @Model.StartDate.ToShortDateString()</p>
    <p><strong>Booking Date:</strong> @Model.EndDate.ToShortDateString()</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="BookingId" />
    <button type="submit">Delete</button> |
    <a asp-action="Index">Cancel</a>
</form>
