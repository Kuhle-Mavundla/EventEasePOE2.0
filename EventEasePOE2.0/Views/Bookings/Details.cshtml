@model EventEasePOE2._0.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Event:</dt>
            <dd class="col-sm-9">@Model.Event?.Name</dd>

            <dt class="col-sm-3">Venue:</dt>
            <dd class="col-sm-9">@Model.Venue?.Name</dd>

            <dt class="col-sm-3">Start Date:</dt>
            <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

            <dt class="col-sm-3">End Date:</dt>
            <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.BookingId" class="btn btn-outline-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</div>
